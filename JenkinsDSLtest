job('MavenDSL') {
    description("This is first Maven job generated by the DSL on ${new Date()}, the project is a simple Maven project hosted on github")
    scm {
        git("https://github.com/BhavaniShekhar/my-app.git", 'master')
    }
    triggers {
        scm('* * * * *')
    }
    steps {
        maven('clean package', '/pom.xml')
    }
    publishers {
        //archive the war file generated
        archiveArtifacts '**/*.jar'
    }
}
